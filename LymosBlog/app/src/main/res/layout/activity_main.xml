<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lymos.lymosblog.MainActivity">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical">
    
        <EditText
            android:id = "@+id/account"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:inputType = "text"
            android:hint = "账号/邮箱"
            android:textColorHint = "#95a1aa"
            android:paddingBottom = "10sp"
            />

        <EditText
            android:id = "@+id/password"
            android:layout_width = "match_parent"
            android:hint = "密码"
            android:textColorHint = "#95a1aa"
            android:layout_height = "wrap_content"
            android:inputType = "textPassword" />

        <Button
            android:id = "@+id/btn_login"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:text = "@string/BTN_LOGIN"
            android:background = "@color/primary"
            android:layout_marginTop = "10sp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation = "horizontal"
            android:layout_marginTop = "10dp">
            <TextView
                android:id = "@+id/btn_create_account"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text = "@string/BTN_CREATE_ACCOUNT"
                android:layout_weight = "1"
                />
            <TextView
                android:id = "@+id/btn_forget_pwd"
                android:layout_width = "fill_parent"
                android:layout_height="fill_parent"
                android:text = "@string/BTN_FORGET_PWD"
                android:layout_weight = "1"
                android:gravity = "right"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop = "36dp">

            <TextView
                android:id = "@+id/btn_weibo_login"
                android:layout_width = "fill_parent"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:text = "@string/BTN_WEIBO_LOGIN"
                android:gravity = "center"
                />
            <TextView
                android:id = "@+id/btn_weixin_login"
                android:layout_width = "fill_parent"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:text = "@string/BTN_WEIXIN_LOGIN"
                android:gravity = "center"
                />
            <TextView
                android:id = "@+id/btn_qq_login"
                android:layout_width = "fill_parent"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:text = "@string/BTN_QQ_LOGIN"
                android:gravity = "center"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
